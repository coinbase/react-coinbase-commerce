{
  "name": "react-coinbase-commerce",
  "version": "1.6.0",
  "description": "A react component to easily embed a Coinbase Commerce Checkout within your application",
  "keywords": [
    "react",
    "cryptocurrency",
    "coinbase",
    "commerce",
    "bitcoin",
    "litecoin",
    "dogecoin",
    "ethereum"
  ],
  "homepage": "https://github.com/coinbase/react-coinbase-commerce",
  "main": "dist/index.js",
  "scripts": {
    "test": "flow src && jest",
    "test:coverage": "jest --coverage",
    "start": "webpack serve --mode development --config webpack.dev.config.js",
    "build": "webpack --config webpack.prod.config.js --mode production",
    "transpile": "rm -rf ./dist && npm run build",
    "prepublishOnly": "npm run test && npm run transpile",
    "flow": "flow"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "setupFiles": [
      "./test/jestsetup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "globals": {
      "VERSION": "1"
    },
    "testURL": "http://localhost"
  },
  "author": "Tyson Battistella",
  "license": "Apache 2.0",
  "peerDependencies": {
    "react": "^15.6.0 || ^16.0.0 || ^17.0.0",
    "react-dom": "^15.6.0 || ^16.0.0 || ^17.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-flow": "^7.12.1",
    "@babel/preset-react": "^7.12.10",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.7",
    "acorn": "^7.2.0",
    "babel-loader": "^8.2.2",
    "braces": ">=2.3.1",
    "css-loader": "^6.7.1",
    "enzyme": "3.3.0",
    "enzyme-to-json": "3.3.4",
    "flow-bin": "^0.76.0",
    "html-webpack-plugin": "^4.5.1",
    "husky": "^0.14.3",
    "jest": "^26.6.3",
    "kind-of": ">=6.0.3",
    "mem": ">=4.0.0",
    "mini-css-extract-plugin": "^2.6.0",
    "minimist": ">=0.2.1",
    "node-sass": "^5.0.0",
    "prettier": "1.13.7",
    "pretty-quick": "^1.6.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "sass-loader": "^13.0.0",
    "serialize-javascript": "^5.0.1",
    "set-value": ">=2.0.1",
    "style-loader": "0.21.0",
    "styled-components": "^5.2.1",
    "webpack": "^5.13.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^3.11.1"
  }
}
